#:import Window kivy.core.window.Window

<TransparentButton>
    size_hint: None, None
    default_size_x: "48dp"
    default_size_y: "48dp"  
    size: (self.default_size_x, self.default_size_y)
    opacity: 0
    

<AudioToolbarButton>
    icon_size: 0.6 * self.parent.height
    # y: (self.parent.height - self.height) / 2  # set y position to halfway down parent widget

<PlayButton@AudioToolbarButton>:
    is_playing: False  # Note! This creates a new BooleanProperty
    icon: "pause" if self.is_playing else "play"
    on_release: self.is_playing = not self.is_playing
    
<MyToolbar>
    is_active: False
    resize_reader_window: False
    duration: 0.2

<PlayerScreen>:
    name: "player"
    id: player_screen
    TransparentButton:
        id: next_button
        pos_hint: {"right": 1, "bottom": 1}
        size_hint: None, None
        default_size_x: Window.width / 2
        default_size_y: 5/6 * Window.height 
        text: "next"
        on_release:
            root.ids.reader_window.next_page()

    TransparentButton:
        id: prev_button
        pos_hint: {"left": 1, "bottom": 1}
        default_size_x: Window.width / 2
        default_size_y: 5/6 * Window.height 
        text: "prev"
        on_release:
            root.ids.reader_window.prev_page()

    TransparentButton:
        id: audio_toolbar_show_button
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: None, None
        default_size_x: Window.width / 3
        default_size_y: 1/3 * Window.height 
        text: "+"
        on_release:
            root.ids.audio_toolbar.toggle_toolbar()

    TransparentButton:
        id: top_toolbar_show_button
        pos_hint: {"left": 1, "top": 1}
        size_hint: None, None
        default_size_x: Window.width
        default_size_y: 1/6 * Window.height 
        text: "+"
        on_release:
            root.ids.top_toolbar.toggle_toolbar()

    ReaderWindow:
        id: reader_window
        markup: True
        text: ""
        halign: 'left'
        valign: 'top'
        size_hint: None, None
        pos_hint: {'left': 1, 'top': 1}
        size: Window.width, Window.height
        text_size: self.size
        padding: 40, 40 # make this into a setting
        # canvas.before:
        #     Color:
        #         rgba:0,0,0,1
        #     Rectangle:
        #         pos:self.pos
        #         size:self.size

    FloatLayout:
        orientation: "vertical"

        MyToolbar:
            # top toolbar
            id: top_toolbar
            inactive_y: Window.height
            active_y: Window.height - self.height
            size_hint_y: None
            y: self.inactive_y
            height: "40dp"
            padding: 0
            spacing: Window.width - 2 * root.ids.settings_button.width

            AudioToolbarButton:
                icon: "keyboard-backspace"
                pos_hint: {"left": 0}
                on_release:
                    app.root.transition.direction = "right"
                    app.root.current = "library"

            AudioToolbarButton:
                id: settings_button
                icon: "dots-vertical"
                pos_hint: {"right": 1}
                on_release:
                    app.open_settings()

        MyToolbar:
            # audio toolbar
            id: audio_toolbar
            inactive_y: -self.height
            active_y: 0
            resize_reader_window: True
            orientation: "vertical"
            size_hint_y: None
            height: "120dp"
            padding: "4dp"
            spacing: "4dp"
            y: self.inactive_y

            BoxLayout:
                # top layer
                orientation: "horizontal"
                height: self.parent.height / 3

                AudioToolbarButton:
                    icon: "skip-backward"
                    on_release:
                        root.audio_player.go_to_previous_audio_file()

                MDSlider:
                    id: audio_slider
                    hint: False
                    size_hint_x: 0.8 * self.parent.width
                    value: 0
                    min: 0
                    max: 1
                    step: 0.01
                    on_touch_up:
                        # Add your code here                    

                AudioToolbarButton:
                    icon: "skip-forward"
                    on_release:
                        root.audio_player.go_to_next_audio_file()

            BoxLayout:
                # bottom layer
                spacing: (Window.width - 5 * root.ids.play_button.width) / 4
                orientation: "horizontal"
                AudioToolbarButton:
                    # this will become a volume slider / mute button
                    icon: "volume-high"
                    on_release:
                        # Add your code here

                AudioToolbarButton:
                    icon: "step-backward"
                    on_release:
                        root.audio_player.go_to_audio_file_position(root.audio_player.current_audio_idx, root.audio_player.current_audio_position-30) # this should be a setting

                PlayButton:
                    id: play_button
                    on_press:
                        root.audio_player.toggle_play()

                AudioToolbarButton:
                    icon: 'step-forward'
                    on_release:
                        root.audio_player.go_to_audio_file_position(root.audio_player.current_audio_idx, root.audio_player.current_audio_position+30) # this should be a setting

                AudioToolbarButton:
                    # close audio toolbar
                    icon: "triangle-small-down"
                    on_release:
                        root.ids.audio_toolbar.toggle_toolbar()
