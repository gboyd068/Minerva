#:import Window kivy.core.window.Window


<PlayerScreen>:
    name: "player"

    FloatLayout:
        orientation: "vertical"

        BoxLayout:
            id: top_toolbar
            size_hint_y: None
            y: Window.height
            height: "48dp"
            padding: "4dp"
            spacing: "4dp"

            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "library"

            Button:
                text: "Settings"
                on_release:
                    app.open_settings()

        BoxLayout:
            id: audio_toolbar
            orientation: "vertical"
            size_hint_y: None
            height: "48dp"
            padding: "4dp"
            spacing: "4dp"
            y: -self.height

            Button:
                text: "Option 1"
                on_release:
                    # Add your code here

            Button:
                text: "Option 2"
                on_release:
                    # Add your code here

        Button:
            size_hint: None, None
            size: "48dp", "48dp"
            pos_hint: {"left": 1, "bottom": 1}
            text: "+"
            on_release:
                root.show_audio_toolbar()

        Button:
            size_hint: None, None
            size: "48dp", "48dp"
            pos_hint: {"left": 1, "top": 1}
            text: "+"
            on_release:
                root.show_top_toolbar()

    
        
    